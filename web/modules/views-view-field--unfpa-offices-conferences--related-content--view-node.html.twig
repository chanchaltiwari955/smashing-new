{{ attach_library('unfpa_offices_conferences/unfpa_offices_conference_style') }}
{% set node_url = path('entity.node.canonical', { 'node': row.nid }) %}
{% switch (fields.type.content|striptags) %}
   {% case 'ct_news' %}
    {% output = 'read more'|t %}
     {% break %}

  {% case 'ct_resources' %}
    {% output = 'view resource'|t %}
   {% break %}

  {% case 'ct_video' %}
    {% output = 'watch video'|t %}
   {% break %}

  {% case 'ct_publications' %}
    {% output = 'see publication'|t %}
   {% break %}

  {% case 'ct_events' %}
    {% output = 'see event'|t %}
   {% break %}

  {% case 'slideshow' %}
    {% output = 'see slideshow'|t %}
   {% break %}

   {% default %}
    {% output = 'read more'|t %}
    {% break %}
{% endswitch %}
<a href="{{ node_url }}" class="btn">
{{ output }}
<i class="secondary-arrow"></i></a>

